<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsForMainAplicationPage.Profile">mm,
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo2"
        app:civ_border_color="@color/roz"
        app:civ_border_width="3dp"
        android:layout_marginBottom="250dp"
        >

    </de.hdodenhof.circleimageview.CircleImageView>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="50dp"
        android:id="@+id/card1"
        android:layout_marginTop="300dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardCornerRadius="50dp"
        android:backgroundTint="@color/roz">
        <ImageView
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:textColor="@color/crem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tasks Done"
            android:textSize="15dp"></TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="300dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardCornerRadius="50dp"
        android:backgroundTint="@color/roz">
        <ImageView
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_call_made_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <TextView
            android:textColor="@color/crem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="On going tasks:"
            android:textSize="15dp"></TextView>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="450dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardCornerRadius="50dp"
        android:backgroundTint="@color/roz">
        <ImageView
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_emoji_events_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <TextView
            android:textColor="@color/crem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Current Score:"
            android:textSize="15dp"></TextView>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="50dp"
        android:id="@+id/card4"
        android:layout_marginTop="450dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardCornerRadius="50dp"
        android:backgroundTint="@color/roz">
        <ImageView
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_call_received_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:textColor="@color/crem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tasks Failed"
            android:textSize="15dp"></TextView>

    </androidx.cardview.widget.CardView>


</FrameLayout>